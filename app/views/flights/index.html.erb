<h1>All Flights</h1>
<% @flights.each do |flight| %>
<section id='flight-<%=flight.id%>'>

    <p><b>Flight:</b> <%= flight.number %></p>
    <p><b>Airline:</b> <%= flight.airline.name %></p>
    <b>Passengers:</b> <% flight.passengers.each do |passenger| %>
      <li><%=passenger.name%></li>
    <% end %>
    <br>


<% end %>
</section>
